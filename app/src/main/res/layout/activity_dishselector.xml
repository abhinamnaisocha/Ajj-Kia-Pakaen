<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnbeef"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btnbeef"
        android:layout_marginTop="106dp"
        android:text="چاول" />

    <Button
        android:id="@+id/btnbeef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnrice"
        android:layout_centerHorizontal="true"
        android:text="گوشت" />

    <Button
        android:id="@+id/btnvegitables"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnbeef"
        android:layout_centerHorizontal="true"
        android:text="سبزی" />
</RelativeLayout>